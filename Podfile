# platform :ios, '9.0'

target 'MVVM-C' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for MVVM-C
  pod 'ReachabilitySwift', '~> 5.0'
  pod 'SwiftKeychainWrapper', '~> 3.4'
  
  # Pods for Firebase
  pod 'Firebase/Auth'
  pod 'Firebase/Analytics'
  
  # Pods for Google
  pod 'GoogleSignIn'
  
  # Pods for Twitter
  pod 'TwitterKit'

  
  # Pods for Facebook
  pod 'Bolts'
  pod 'FBSDKCoreKit'
  pod 'FBSDKLoginKit'

  target 'MVVM-CTests' do
    inherit! :search_paths
    # Pods for testing
  end

end
